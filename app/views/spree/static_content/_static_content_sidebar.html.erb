<% if Spree::Page.visible.sidebar_links.any? %>
  <hr>
  <nav id="pages" class="sidebar-item">
    <h4 class="pages-root"><%= Spree.t(:pages) %></h4>
    <div class="pages-list list-group">
      <%= render partial: "spree/static_content/static_content_list", 
        collection: Spree::Page.visible.sidebar_links, 
        as: :page,
        locals: { 
          css_class: 'list-group-item',
          tag_name: :a
        } %>
    </div>
  </nav>
<% end %>
